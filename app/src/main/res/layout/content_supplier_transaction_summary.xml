<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almostWhite"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_supplier_transaction_summary">

    <LinearLayout
        android:id="@+id/lLDateSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_3sdp">

            <LinearLayout
                android:id="@+id/lLDateFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:textColor="@color/textBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tVDateFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dateHint"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/darkGray" />

            <LinearLayout
                android:id="@+id/lLDateTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:textColor="@color/textBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tVDateTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dateHint"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonSearch"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="0.3"
                android:background="@drawable/bg_button"
                android:text="@string/search"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/scrollMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_below="@id/lLDateSelection"
        android:background="@color/colorPrimary"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tVSN"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/sn"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVPartyName"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/party"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVOpeningBalance"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/openingBalance"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVPurchaseAmount"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/purchaseAmount"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVPurchaseAmountWithoutCharges"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/purchaseAmountWC"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVTaxAmount"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/taxAmount"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVClosingBalance"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/balance"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/lLNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:visibility="visible"
        tools:ignore="UseCompoundDrawables"
        tools:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/no_data"
            android:tint="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="No data available"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp" />

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rVSupplierTransaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/scrollTotalMain"
        android:layout_below="@+id/scrollMain"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"/>


    <HorizontalScrollView
        android:id="@+id/scrollTotalMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_above="@+id/cVBottomButtons"
        android:background="@color/colorPrimary"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tVTotal"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/total"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVTotalOpeningBalance"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVTotalPurchaseAmount"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVTotalPurchaseAmountWC"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVTotalTaxAmount"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tVTotalClosingBalance"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cVBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/_4sdp">

        <TextView
            android:id="@+id/tVCancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>
