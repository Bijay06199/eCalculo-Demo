<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:showIn="@layout/activity_invoice_creation">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cVBottomButtons">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cVMainForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@string/date"
                                android:textColor="@color/colorPrimaryDark"
                                tools:ignore="NestedWeights" />


                            <TextView
                                android:id="@+id/tVDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="2076-01-05"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@string/purchaseOrderNumber"
                                android:textColor="@color/colorPrimaryDark"
                                tools:ignore="NestedWeights" />


                            <TextView
                                android:id="@+id/tVOrderNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="1"
                                android:textColor="@color/black" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/_6sdp">

                        <RelativeLayout
                            android:id="@+id/rLStore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tVStore"
                                style="@style/spinner_style"
                                android:background="@drawable/bg_confirm_spinner"
                                android:dropDownVerticalOffset="@dimen/_40sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/select"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@color/white"
                                android:padding="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="@string/store"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/_6sdp">

                        <RelativeLayout
                            android:id="@+id/rLOrderFrom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tVParty"
                                style="@style/spinner_style"
                                android:background="@drawable/bg_confirm_spinner"
                                android:dropDownVerticalOffset="@dimen/_40sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/select"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@color/white"
                                android:padding="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="@string/orderFrom"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/_6sdp">

                        <RelativeLayout
                            android:id="@+id/rLItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/tVItem"
                                style="@style/spinner_style"
                                android:background="@drawable/bg_confirm_spinner"
                                android:dropDownVerticalOffset="@dimen/_40sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/select"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@color/white"
                                android:padding="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="@string/itemrequired"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rLSalesQty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tVSalesQty"
                                style="@style/spinner_style"
                                android:background="@drawable/bg_confirm_spinner"
                                android:dropDownVerticalOffset="@dimen/_40sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/zero"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@color/white"
                                android:padding="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="@string/salesQty"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/_6sdp">

                        <RelativeLayout
                            android:id="@+id/rLUnit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tVUnit"
                                style="@style/spinner_style"
                                android:background="@drawable/bg_confirm_spinner"
                                android:dropDownVerticalOffset="@dimen/_40sdp"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@color/white"
                                android:padding="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="@string/unit"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rLRate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tVRate"
                                style="@style/spinner_style"
                                android:background="@drawable/bg_confirm_spinner"
                                android:dropDownVerticalOffset="@dimen/_40sdp"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@color/white"
                                android:padding="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="@string/rate2"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/_6sdp">

                        <RelativeLayout
                            android:id="@+id/rLTotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tVTotal"
                                style="@style/spinner_style"
                                android:background="@drawable/bg_confirm_spinner"
                                android:dropDownVerticalOffset="@dimen/_40sdp"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@color/white"
                                android:padding="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="@string/total"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rLAdd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="@dimen/_5sdp"
                                android:padding="@dimen/_3sdp"
                                android:visibility="visible"
                                app:cardCornerRadius="@dimen/_4sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tVAdd"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/add"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tVCurrentStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cVMainForm"
                android:layout_margin="@dimen/_8sdp"
                android:text="@string/currentStock"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cVCurrentStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tVCurrentStock"
                android:layout_margin="@dimen/_8sdp"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:id="@+id/scrollMain"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header_height"
                        android:scrollbars="none"
                        android:background="@color/colorPrimary">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="@string/sn"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>

                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="@string/itemName"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="@string/quantity"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="@string/rate2"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="@string/amount"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>

                            <TextView
                                android:layout_width="@dimen/_105sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="@string/action"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rVCurrentStock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:visibility="visible"/>


                    <HorizontalScrollView
                        android:id="@+id/scrollTotal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header_height"
                        android:scrollbars="none"
                        android:background="@color/colorPrimary">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="310dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="@string/total"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>

                            <TextView
                                android:id="@+id/tVQtyTotal"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>

                            <TextView
                                android:id="@+id/tVTotalAmount"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>

                            <TextView
                                android:layout_width="105dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cVNarration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cVCurrentStock"
                android:layout_margin="@dimen/_8sdp"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tVNarration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:maxLines="5"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/narration"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cVBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tVSaveSalesInvoice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white" />


            <TextView
                android:id="@+id/tVCancelSalesInvoice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
